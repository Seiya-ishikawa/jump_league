<!DOCTYPE html>
<html>
  <head>
  <meta name="viewport" content="width=360,initial-scale=1">
    <title>JumpLeague</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "header">
      <div class = "header__title">
        <%= link_to "Jump League",root_path, class:"header__title--text"%>
      </div>
      <div class = "header__devise">
        <% if user_signed_in? %>
          <%= link_to "投票する",new_winpoint_path,class:"header__devise--btn"%>
          <%= link_to "logout",destroy_user_session_path,class:"header__divise--btn"%>
        <% else %>
          <%= link_to "login",new_user_session_path,class:"header__devise--btn"%>
          <%= link_to "signin",new_user_registration_path,class:"header__devise--btn"%>
        <% end %>
      </div>
    </header>
    <div class = "container">
      <%= yield %>
    </div>
  </body>
</html>
